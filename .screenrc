defscrollback 5000
hardstatus alwayslastline "%{= KW} %-w%{= wk}%n %t%{-}%+w%< %=%{+b Kg} %H | %c | %d.%m.%Y"
vbell off

# =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-= #
# ##    Keybindings    ##
 bindkey -k k5 windowlist -b
 bindkey -k k6 copy
 bindkey -k k7 detach
 bindkey -k k8 kill
 bindkey -k k9 screen
 bindkey -k k; title
 bindkey -k F1 prev
 bindkey -k F2 next
